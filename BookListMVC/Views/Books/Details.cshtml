@model BookListMVC.Models.Book
@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Book Details</h2>
<hr />

<form asp-action="Delete">
    <div class="container">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" disabled />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author" class="form-control" disabled />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" class="form-control" disabled />
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edit Book</a>
            <a asp-action="Index" class="btn btn-success btn-sm">Back to List</a>
        </div>
    </div>
</form>

